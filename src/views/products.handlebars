<h1>Bienvenido: {{user.firstName}} {{user.lastName}}</h1>
<p>Email: {{user.email}}</p>
{{#if user.isAdmin}}
    <p>Rol: Administrator</p>
{{else}}
    <p>Rol: User</p>
{{/if}}
<a href="/api/session/logout">Logout</a>

<h1>List of products</h1>
<div id="product-container">
    {{#each products}}
        <div class="product">
            <h2>Title: {{this.title}}</h2>
            <p>Description: {{this.description}}</p>
            <p>Code: {{this.code}}</p>
            <p>Price: {{this.price}}</p>
            <p>Status: {{this.status}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Category: {{this.category}}</p>
            <p>Thumbnail:</p>
            <ul>
                {{#each this.thumbnail}}
                    <li><a href="{{this}}">Link {{@index}}</a></li>
                {{/each}}
            </ul>
            <p>{{this._id}}</p>
            <hr />
            <button class="add-to-cart-btn" data-product-id="{{this._id}}">Add to Cart</button>
        </div>
    {{/each}}
</div>